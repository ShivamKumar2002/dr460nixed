  boot.initrd.kernelModules = [];
  boot.kernelModules = ["kvm-intel"];
  boot.extraModulePackages = [];

  fileSystems."/" = {
    device = "/dev/disk/by-uuid/18ad2808-ebb4-458b-bcd4-8588818f47f5";
    fsType = "btrfs";
    options = ["subvol=@"];
  };

  fileSystems."/boot/efi" = {
    device = "/dev/disk/by-uuid/F2F9-329F";
    fsType = "vfat";
  };

